<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/txtCalculation"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:background="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnEqual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCalculation">

        <TextView
            android:id="@+id/txtResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:text="0"
            android:textSize="30sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/equal" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="391dp"
        android:layout_height="393dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="4"
        app:rowCount="4">

        <ImageButton
            android:id="@+id/imgSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/seven" />

        <ImageButton
            android:id="@+id/imgPlus"
            android:layout_width="98dp"
            android:layout_height="94dp"
            android:layout_margin="0.5dp"
            app:layout_column="3"
            app:layout_row="3"
            app:srcCompat="@drawable/plus" />

        <ImageButton
            android:id="@+id/imgZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/zero" />

        <ImageButton
            android:id="@+id/imgEight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/eight" />

        <ImageButton
            android:id="@+id/imgNine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/nine" />

        <ImageButton
            android:id="@+id/imgDivide"
            android:layout_width="96dp"
            android:layout_height="92dp"
            android:layout_margin="0.5dp"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/divide" />

        <ImageButton
            android:id="@+id/imgFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/four" />

        <ImageButton
            android:id="@+id/imgFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/five" />

        <ImageButton
            android:id="@+id/imgSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/six" />

        <ImageButton
            android:id="@+id/imgMultiple"
            android:layout_width="97dp"
            android:layout_height="95dp"
            android:layout_margin="0.5dp"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/multiply" />

        <ImageButton
            android:id="@+id/imgOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/one" />

        <ImageButton
            android:id="@+id/imgTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/two" />

        <ImageButton
            android:id="@+id/imgThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/three" />

        <ImageButton
            android:id="@+id/imgMinus"
            android:layout_width="97dp"
            android:layout_height="93dp"
            android:layout_margin="0.5dp"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/subtract" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="196dp"
            android:layout_height="92dp"
            android:layout_margin="0.5dp"
            android:text="c"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

